<Window x:Class="BizTalk_Benchmark_Wizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BizTalk_Benchmark_Wizard"
        xmlns:c="clr-namespace:BizTalk_Benchmark_Wizard.Resources.Styles"
        xmlns:my1="clr-namespace:bLogical.GaugeControl;assembly=bLogical.GaugeControl"
        xmlns:dropShadow="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        Title="BizTalk Benchmark Wizard" 
        Height="447" 
        Width="709" 
        ResizeMode="NoResize"
        Icon="Resources/Images/BBW_Logo.png"
        xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" 
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style  TargetType="{x:Type TabControl}">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Name="HeaderPanel"
                                        Grid.Row="0"
                                        Panel.ZIndex="1" 
                                        Margin="0,0,4,-1" 
                                        IsItemsHost="True"
                                        KeyboardNavigation.TabIndex="1"
                                        Background="Transparent" />
                            <Border Name="Border" 
                                    Grid.Row="1" 
                                    Margin="0,0,0,0"
			                        BorderBrush="Gainsboro"
			                        CornerRadius="5,5,5,5"
                                    KeyboardNavigation.TabNavigation="Local"
                                    KeyboardNavigation.DirectionalNavigation="Contained"
                                    KeyboardNavigation.TabIndex="2"
                                    BorderThickness="0,0,0,0"
			                        Background="{StaticResource BrushedMetalBackground}">

                                <ContentPresenter Name="PART_SelectedContentHost"
                                                  Margin="4"
                                                  ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>

                            <Border Name="Border"
                                     Background="Transparent"
                                     BorderBrush="Transparent" 
                                     BorderThickness="1,1,1,1" 
                                     CornerRadius="6,6,0,0" >
                                <ContentPresenter x:Name="ContentSite"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   ContentSource="Header"
                                                   Margin="12,2,12,2"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Calibri"/>
        </Style>
        <Style x:Key="RoundedButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,1,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ControlTemplate.Resources>
                            <Storyboard x:Key="ShowShine">
                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Shine" Storyboard.TargetProperty="(UIElement.Opacity)">
                                    <SplineDoubleKeyFrame KeyTime="00:00:00.5000000" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                            <Storyboard x:Key="HideShine">
                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="Shine" Storyboard.TargetProperty="(UIElement.Opacity)">
                                    <SplineDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </ControlTemplate.Resources>
                        <Border CornerRadius="5,5,5,5" BorderThickness="1,1,1,1" RenderTransformOrigin="0.5,0.5" x:Name="border" BorderBrush="#FFFFFFFF">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <SkewTransform AngleX="0" AngleY="0"/>
                                    <RotateTransform Angle="0"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Border Background="{TemplateBinding Background}" CornerRadius="5,5,5,5" x:Name="border1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.5*"/>
                                        <RowDefinition Height="0.5*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" CornerRadius="5,5,0,0">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#00FFFFFF" Offset="0"/>
                                                <GradientStop Color="#7EFFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <Border Grid.Row="1" Opacity="0" x:Name="Shine" Width="Auto" Height="Auto" CornerRadius="0,0,5,5" Margin="1,0,-1,0" Background="{TemplateBinding BorderBrush}"/>
                                    <ContentPresenter VerticalAlignment="Center"  Grid.RowSpan="2" HorizontalAlignment="Center" x:Name="contentPresenter"/>
                                </Grid>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" TargetName="border1" Value="0.5"/>
                                <Setter Property="Opacity" TargetName="border" Value="1"/>
                                <Setter Property="Opacity" TargetName="contentPresenter" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                            <SkewTransform AngleX="0" AngleY="0"/>
                                            <RotateTransform Angle="0"/>
                                            <TranslateTransform X="0" Y="0"/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.ExitActions>
                                    <BeginStoryboard Storyboard="{StaticResource HideShine}" x:Name="HideShine_BeginStoryboard"/>
                                </Trigger.ExitActions>
                                <Trigger.EnterActions>
                                    <BeginStoryboard x:Name="ShowShine_BeginStoryboard" Storyboard="{StaticResource ShowShine}"/>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="{x:Type TextBox}" TargetType="{x:Type TextBoxBase}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBoxBase}">
                        <Border Name="Border"
                                  CornerRadius="5" 
                                  Padding="2"
                                  Background="{StaticResource WindowBackgroundBrush}"
                                  BorderBrush="{StaticResource SolidBorderBrush}"
                                  BorderThickness="1" >
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource DisabledBackgroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource DisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="{x:Type local:MaskedTextBox}" TargetType="{x:Type local:MaskedTextBox}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBoxBase}">
                        <Border Name="Border"
                                  CornerRadius="5" 
                                  Padding="2"
                                  Background="{StaticResource WindowBackgroundBrush}"
                                  BorderBrush="{StaticResource SolidBorderBrush}"
                                  BorderThickness="1" >
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource DisabledBackgroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource DisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Name="Border"
                                  CornerRadius="5" 
                                  Padding="2"
                                  Background="{StaticResource WindowBackgroundBrush}"
                                  BorderBrush="{StaticResource SolidBorderBrush}"
                                  BorderThickness="1" >
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource DisabledBackgroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource DisabledBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Canvas>       
            <TabControl Height="430"
                        Name="tabControl1" 
                        Width="693"
                        Background="Transparent" 
                        Canvas.Top="-14"
                        Margin="5,0,0,0" TabStripPlacement="Bottom" SelectionChanged="tabControl1_SelectionChanged">
                <TabItem Header="" Name="tabWelcome">
                    <Grid Background="Transparent">
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">Welcome to BizTalk Benchmark Wizard</Label>

                        <Label Margin="40,80,19,129" Name="label2"  FontFamily="Calibri">
                            <TextBlock TextWrapping="Wrap">The purpose of this tool is to verify your BizTalk environment performs as expected. The typical use case where you would <LineBreak/>use the BizTalk Benchmark Wizard would be after BizTalk Server is installed and before deploying any solutions to the environment.<LineBreak/>
                                <LineBreak/>BizTalk Benchmark Wizard performs load to BizTalk Server in relation to a specific scenario. During the execution of the test, counter information is collected and benchmarked against collected statistics relevant to your BizTalk Server environment<LineBreak/>
                                After completion of the test, a result is presented showing whether or not your BizTalk investment is performing as you could expect.<LineBreak/>
                                <LineBreak/>The executed scenarios may or may not be relative to any realistic scenario, and is only intended for testing. The BizTalk Benchmark Wizard has been developed in relation to the <Bold><Italic>BizTalk Server 2009 Scale Out Testing Study</Italic></Bold>. More information about the study can be found <Hyperlink NavigateUri="http://msdn.microsoft.com/en-us/library/ee377068(BTS.10).aspx" RequestNavigate="Hyperlink_RequestNavigate" >here</Hyperlink>.</TextBlock>
                        </Label>

                    </Grid>
                </TabItem>
                <TabItem Header="" Name="tabPrerequsites" >
                    <Grid>
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">Prerequsites</Label>
                        <StackPanel Orientation="Vertical" Margin="40,80" >
                            <StackPanel Orientation="Horizontal">
                                <Image Name="picInstallCollectorSet" Height="40" Source="Resources/Images/unknown.png"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontFamily="Calibri" MaxWidth="550" Width="490">
                                        <TextBlock TextWrapping="Wrap"><Bold>Optional</Bold> - Create Data Collector Sets for further analyzes after the completion of the test.</TextBlock>
                                    </Label>
                                    <Button Height="23" Style="{DynamicResource RoundedButton}" IsEnabled="False" HorizontalAlignment="Right" Name="btnCreateCollectors" VerticalAlignment="Center" Width="75" Click="btnCreateCollectors_Click">Create</Button>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Height="10"/>
                            <StackPanel Orientation="Horizontal">
                                <Image Name="picInstalledScenario" Height="40" Source="Resources/Images/unknown.png"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontFamily="Calibri" MaxWidth="550" Width="450">
                                        <TextBlock TextWrapping="Wrap"><Bold>Mandatory</Bold> - Install testing scenario on all BizTalk servers.</TextBlock>
                                    </Label>
                                    <Label Name="lblInstalledScenarioManual" FontFamily="Calibri">
                                        <TextBlock TextWrapping="Wrap"><Bold>This is a manual step.</Bold></TextBlock>
                                    </Label>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Height="10"/>
                            <StackPanel Orientation="Vertical" Name="WaitPanel">
                                <TextBlock Name="lblWait" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Text="Please wait while checking for installed components..."/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Name="InstallInstructions" Visibility="Collapsed">
                                <Label Name="lblInstallInstructionsTitle" FontWeight="Bold">Installation instructions:</Label>
                                <Label Name="lblInstallInstructions">
                                    <TextBlock >1. Copy the BizTalk folder located in the [InstallDir]\Artefacts folder to your BizTalk servers<LineBreak/>
                                                                    2. Run the InstallHosts.vbs script on ONE of the BizTalk servers, to create hosts, host instances and adapter handlers.<LineBreak/>
                                                                    3. Import the BizTalk Benchmark Wizard.msi on ONE of the BizTalk Servers<LineBreak/>
                                                                    4. Install the BizTalk Benchmark Wizard.msi on ALL BizTalk servers in order to add the assemblies to GAC.<LineBreak/>
                                                                    5. Restart the BBW* hosts and stop all other host instances<LineBreak/>
                                                                    6. Run this wizard again<LineBreak/><LineBreak/>It is strongly recommened not to run the wizard from any of the BizTalk servers.
                                    </TextBlock>


                                </Label>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="" Name="tabScenario">
                    <Grid>
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">Scenarios</Label>

                        <Label Margin="40,75,19,129" FontFamily="Calibri">
                            <TextBlock TextWrapping="Wrap">
                                BizTalk Benchmark Wizard uses Microsoft LoadGen 2007 to generate message transmission loads to run performance and stress tests for Microsoft BizTalk Server applications. 
                                <LineBreak/>Depending on which scenario you select below, a different script will be executed. Microsoft LoadGen 2007 was installed together with BizTalk Benchmark Wizard, and can be used afterwards to continue analyzing your environment.
                            </TextBlock>
                        </Label>
                        <Canvas Margin="40,150" >
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label Canvas.Left="26" Canvas.Top="16" Height="28" Name="label1" Width="90">Select scenario:</Label>
                                    <ComboBox Template="{StaticResource ComboBoxTemplate}" Canvas.Left="121" Canvas.Top="16" Height="23" Name="cbScenario" Width="510" SelectionChanged="cbScenario_SelectionChanged" />
                                </StackPanel>
                                <StackPanel Height="10"/>
                                <GroupBox Header="Select an environment which, as close as possible, resembles your own" 
                                          x:Name="environmentsGroup" 
                                          Height="150" 
                                          Width="600" 
                                          Canvas.Left="25" 
                                          Canvas.Top="45"> 
                                    <Border Margin="0,0,0,0"
			                                BorderBrush="Gainsboro"
                                            CornerRadius="5,5,5,5"
                                            BorderThickness="1,1,1,1">
                                        <StackPanel Orientation="Vertical">
                                            <ListBox Name="environments" 
                                                    AllowDrop="False"
                                                    BorderBrush="{StaticResource BrushedMetalBackground}" 
                                                    Background="{StaticResource BrushedMetalBackground}"
                                                    ItemsSource="{Binding}" 
                                                     SelectionChanged="environments_SelectionChanged" 
                                                     MouseUp="environments_MouseUp" 
                                                     TabIndex="0" 
                                                     IsTabStop="True">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <!--<TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center" Width="200" FontWeight="Bold"/>
                                                            <StackPanel Width="20" Orientation="Horizontal"/>-->
                                                            <TextBlock Text="{Binding Path=Description}" VerticalAlignment="Center" Width="580"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>
                                </GroupBox>
                            </StackPanel>
                        </Canvas>
                    </Grid>
                </TabItem>
                <TabItem Header="" Name="tabScenarioDescription">
                    <Grid>
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">
                            <TextBlock Name="ScenarioName" TextWrapping="Wrap">Scenario</TextBlock>
                        </Label>

                        <Label FontFamily="Calibri" Margin="0,80,19,129">
                            <TextBlock Name="ScenarioDescription"  TextWrapping="Wrap">...</TextBlock>
                        </Label>

                        <Canvas>
                            <Image Name="ScenairoPicture1" Source="Resources/Images/scenario1.png" Width="400" Canvas.Top="217" Canvas.Left="36.654" Height="151" Visibility="Visible"/>
                            <Image Name="ScenairoPicture2" Source="Resources/Images/scenario2.png" Width="400" Canvas.Top="217" Canvas.Left="36.654" Height="151" Visibility="Hidden"/>
                        </Canvas>
                    </Grid>
                </TabItem>
                <TabItem Header="" Name="tabSelectHosts">
                    <Grid>
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">
                            <TextBlock TextWrapping="Wrap">Select Receive and Send hosts</TextBlock>
                        </Label>
                        <Label Margin="40,75,19,129" FontFamily="Calibri">
                            <TextBlock TextWrapping="Wrap">
                                While running the test BizTalk Benchmark Wizard will collect Perfmon Counter data for test evaluation.<LineBreak/>This data is collected from all BizTalk servers. Please provide information about which servers are running the hosts.
                            </TextBlock>
                        </Label>
                        <GroupBox Header="Hosts" x:Name="tbReceivePorts" Margin="68,158,86,107.5">
                            <Border Margin="0,0,0,0"
			                        BorderBrush="Gainsboro"
                                    CornerRadius="5,5,5,5"
                                    BorderThickness="1,1,1,1">
                                <StackPanel Orientation="Vertical">
                                    <ListBox Name="lstHosts" 
                                        AllowDrop="False"
                                        BorderBrush="{StaticResource BrushedMetalBackground}" 
                                        Background="{StaticResource BrushedMetalBackground}"
                                        ItemsSource="{Binding}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Path=HostDescription}" VerticalAlignment="Center" Width="260" FontWeight="Bold"  Height="25"/>
                                                    <ComboBox Template="{StaticResource ComboBoxTemplate}"
                                                              ItemsSource="{Binding Path=Servers, Mode=TwoWay}" 
                                                              SelectedIndex="0" 
                                                              SelectedItem="{Binding Path=SelectedHost, Mode=TwoWay}"
                                                              Width="250"
                                                              Height="20"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                </StackPanel>
                            </Border>
                        </GroupBox>
                        <StackPanel Height="60" Orientation="Horizontal"/>

                    </Grid>
                </TabItem>
                <TabItem Header="" Name="tabPrepare">
                    <Grid>
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">Prepare</Label>
                        <StackPanel Orientation="Vertical" Margin="40,80,20,61" >
                            <Label FontFamily="Calibri">
                                <TextBlock Name="TESTLABEL" TextWrapping="Wrap">In order to create a comparable result, please terminate all suspended instances, and stop all Host Instances <LineBreak/>not running the WCF-NetTcp adapter. Make sure to have at least one Host Instance with tracking enabled.</TextBlock>
                            </Label>
                            <Label VerticalAlignment="Top" FontSize="25" FontWeight="Bold" FontFamily="Calibri">Start the Indigo Service</Label>

                            <Label FontFamily="Calibri">
                                <TextBlock TextWrapping="Wrap">Before starting the tests, The Indigo Service host console application need to be started. This service is used by 
                                <LineBreak/>the BizTalk scenario, and would benefit being started on a separate server.<LineBreak/>    
                                <LineBreak/>1. Copy the IndigoService folder located in the BizTalk Benchmark Wizard install folder to a separate server. 
                                <LineBreak/>2. Start the Indigo Service by double-click the  <Bold>StartIndigoService.bat</Bold> file.
                                <LineBreak/>3. Enter the name of the server where you have started the Indigo Service in the text box below.
                                <LineBreak/>4. Test the Indigo Service by clicking the "Test Indigo service" button.
                                </TextBlock>
                            </Label>
                            <StackPanel Height="5"/>
                            <StackPanel Orientation="Horizontal">
                                <Image Name="picServiceIsRunning" Height="40" Source="Resources/Images/unknown.png"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontFamily="Calibri" Height="23" >
                                        <TextBlock TextWrapping="Wrap"><Bold>Server name:</Bold></TextBlock>
                                    </Label>
                                    <TextBox Name="txtIndigoServiceServer" Width="280" Height="23" VerticalAlignment="Center" Text="" ></TextBox>
                                    <StackPanel Width="80"/>
                                    <Button Height="25" Style="{DynamicResource RoundedButton}" HorizontalAlignment="Right" Name="btnTestService" VerticalAlignment="Center" Width="130" Click="btnTestService_Click">Test the Indigo Service</Button>
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Height="0"/>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal" Width="115"/>
                                <CheckBox Name="chbStartCollectorSets" VerticalAlignment="Center" IsChecked="False" >Start Perfmon collector sets</CheckBox>
                                <StackPanel Width="10"/> 
                                <TextBlock VerticalAlignment="Center">Test duration (minutes):</TextBlock>
                                <local:MaskedTextBox Mask="000" x:Name="txtTestDuration" Width="50" TextAlignment="Center">30</local:MaskedTextBox>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="" Name="tabInitiating" >
                    <Grid>
                        <Label Height="61" Margin="20,34,19,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Calibri">Please wait while initiating test runs</Label>
                        <StackPanel Orientation="Vertical" Margin="40,90" Height="250">

                            <StackPanel Orientation="Horizontal">
                                <Image Name="picUpdateSendportUri" Height="40" Source="Resources/Images/gear_run.png"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontFamily="Calibri" MaxWidth="550" Width="500" VerticalAlignment="Center">
                                        <TextBlock TextWrapping="Wrap"><Bold>Update Uri for BizTalk send port (Indigo Service Uri)</Bold></TextBlock>
                                    </Label>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="5" />
                            <StackPanel Orientation="Horizontal">
                                <Image Name="picStartBizTalkArtefacts" Height="40" Source="Resources/Images/gear_pause.png"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontFamily="Calibri" MaxWidth="550" Width="500" VerticalAlignment="Center">
                                        <TextBlock TextWrapping="Wrap"><Bold>Start BizTalk ports and orchestrations</Bold></TextBlock>
                                    </Label>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="5" />
                            <StackPanel Orientation="Horizontal">
                                <Image Name="picStartCollectorSets" Height="40" Source="Resources/Images/gear_pause.png"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontFamily="Calibri" MaxWidth="550" Width="500" VerticalAlignment="Center">
                                        <TextBlock TextWrapping="Wrap"><Bold>Start Perfmon collector sets </Bold> (this might take a while)</TextBlock>
                                    </Label>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="5" />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Image Name="picInitPerfCounters" Height="40" Source="Resources/Images/gear_pause.png"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Label FontFamily="Calibri" MaxWidth="550" Width="500" VerticalAlignment="Center">
                                            <TextBlock TextWrapping="Wrap"><Bold>Initiate Perfmon counters</Bold></TextBlock>
                                        </Label>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="5" />
